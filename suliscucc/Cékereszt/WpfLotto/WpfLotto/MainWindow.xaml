<Window x:Class="WpfLotto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLotto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="gridMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="gridGombok" />
        <StackPanel Grid.Column="1">
            <Button x:Name="buttonSorsolas" Content="Sorsolás" FontSize="20" Margin="5" Height="40" IsEnabled="False"/>
            <Button x:Name="buttonUj" Content="Új játék" FontSize="20" Margin="5" Height="40" IsEnabled="True"/>
        </StackPanel>
        
        <TextBlock x:Name="textBlockTalat" Grid.Row="1" FontSize="30" HorizontalAlignment="Center"/>
    </Grid>
</Window>
